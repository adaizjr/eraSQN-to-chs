@STRLENS_FIX(ARGS)
#FUNCTION
	RETURNF STRLENSU(ARGS)*2

@TEXT_RJ_FIX(ARGS, ARG)
#FUNCTIONS
SELECTCASE STRLENS_FIX(ARGS)
CASE IS >= ARG
	RETURNF ARGS
CASEELSE
	LOCALS = %BL(ARG-STRLENS_FIX(ARGS))%%ARGS%
ENDSELECT
RETURNF LOCALS

@TEXT_LJ_FIX(ARGS, ARG)
#FUNCTIONS
SELECTCASE STRLENS_FIX(ARGS)
CASE IS >= ARG
	RETURNF ARGS
CASEELSE
	LOCALS = %ARGS%%BL(ARG-STRLENS_FIX(ARGS))%
ENDSELECT
RETURNF LOCALS
